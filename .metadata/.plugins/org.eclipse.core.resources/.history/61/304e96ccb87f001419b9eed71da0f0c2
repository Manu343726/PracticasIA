(deffacts inicio
    (dd juan maria rosa m)
    (dd juan maria luis h)
    (dd jose laura pilar m)
    (dd luis pilar miguel h)
    (dd miguel isabel jaime h)
    (dd pedro rosa pablo h)
    (dd pedro rosa begoña m))

(defrule padre
    (dd ?x ? ?y ?)
    =>
    (assert (padre ?x ?y)))

(defrule madre
    (dd ? ?x ?y ?)
    =>
    (assert (madre ?x ?y)))

(defrule hijo1
	(dd ?y ? ?x h)
	=>
    (assert (hijo ?x ?y)))

(defrule hijo2
	(dd ? ?y ?x h)
	=>
    (assert (hijo ?x ?y)))

(defrule hija1
	(dd ?y ? ?x m)
	=>
    (assert (hija ?x ?y)))

(defrule hija2
	(dd ? ?y ?x m)
	=>
    (assert (hija ?x ?y)))

(defrule hermano1
    (padre ?x ?y)
    (padre ?x ?z)
    (dd ? ? ?y h)
    (test (neq ?z ?y))
    =>
    (assert (hermano ?y ?z)))

(defrule hermano2
    (madre ?x ?y)
    (madre ?x ?z)
    (dd ? ? ?y h)
    (test (neq ?z ?y))
    =>
    (assert (hermano ?y ?z)))

(defrule hermana1
    (padre ?x ?y)
    (padre ?x ?z)
    (dd ? ? ?y m)
    (test (neq ?z ?y))
    =>
    (assert (hermana ?y ?z)))

(defrule hermana2
    (madre ?x ?y)
    (madre ?x ?z)
    (dd ? ? ?y m)
    (test (neq ?z ?y))
    =>
    (assert (hermana ?y ?z)))

(defrule abuelo1
    (padre ?x ?y)
    (padre ?y ?z)
    =>
    (assert (abuelo ?x ?z)))

(defrule abuelo2
    (padre ?x ?y)
    (madre ?y ?z)
    =>
    (assert (abuelo ?x ?z)))

(defrule abuela1
    (madre ?x ?y)
    (madre ?y ?z)
    =>
    (assert (abuela ?x ?z)))

(defrule abuela2
    (madre ?x ?y)
    (padre ?y ?z)
    =>
    (assert (abuela ?x ?z)))

(defrule primo1
    (padre ?x ?y)
    (hermano ?x ?z)
	(hijo ?v ?z)
    =>
    (assert (primo ?y ?v)))

(defrule primo2
    (padre ?x ?y)
    (hermana ?x ?z)
	(hijo ?v ?z)
    =>
    (assert (primo ?y ?v)))

(defrule primo3
    (madre ?x ?y)
    (hermano ?x ?z)
	(hijo ?v ?z)
    =>
    (assert (primo ?y ?v)))

(defrule primo4
    (madre ?x ?y)
    (hermana ?x ?z)
	(hijo ?v ?z)
    =>
    (assert (primo ?y ?v)))

(defrule prima1
    (madre ?x ?y)
    (hermana ?x ?z)
	(hija ?v ?z)
    =>
    (assert (prima ?y ?v)))

(defrule prima2
    (madre ?x ?y)
    (hermano ?x ?z)
	(hija ?v ?z)
    =>
    (assert (prima ?y ?v)))

(defrule prima3
    (padre ?x ?y)
    (hermano ?x ?z)
	(hija ?v ?z)
    =>
    (assert (prima ?y ?v)))

(defrule prima4
    (padre ?x ?y)
    (hermana ?x ?z)
	(hija ?v ?z)
    =>
    (assert (prima ?y ?v)))

(defrule ascendiente1
    (ascendiente ?x ?y)
    (ascendiente ?y ?z)
    =>
    (assert (ascendiente ?x ?z)))

(defrule ascendiente2
    (padre ?x ?y)
    =>
    (assert (ascendiente ?y ?x)))

(defrule ascendiente3
    (madre ?x ?y)
    =>
    (assert (ascendiente ?y ?x)))

(reset)
(run)
(facts)